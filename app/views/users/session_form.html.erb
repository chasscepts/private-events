<div class="container-md">
  <div class="form-card">
    <h1 class="text-danger">Sign In</h1>
    <% unless alert.nil? %>
      <div id="alert"><%= alert %></div>
    <% end %>
    <%= form_with url: 'sign_in' do |f| %>
      <div class="my-4">
        <%= f.text_field :username, required: true, placeholder: 'Enter your username' %>
      </div>
      <div class="d-flex justify-content-end">
        <%= f.button 'Log In', class: 'btn btn-success text-light px-5' %>
      </div>
    <% end %>
  </div>
